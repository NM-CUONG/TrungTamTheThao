
@model PagedList.IPagedList<WebApp.Models.tb_Shift>
@using PagedList.Mvc;


<style>
    table {
        margin-top: 20px;
    }
    
</style>

<table class="table table-striped table-hover">
    <thead>
        <tr class="table-secondary">
            <th scope="col">STT</th>
            <th scope="col">Mã khung giờ</th>
            <th scope="col">Tên khung giờ</th>
            <th scope="col">Giá tiền</th>
            <th scope="col">Loại khu vực</th>
            <th scope="col">Thao tác</th>
        </tr>
    </thead>
    <tbody class="table-content">
        @{
            var STT = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>@STT</td>
                    <td>@item.ShiftID</td>
                    <td>@item.ShiftName</td>
                    <td>@item.Price</td>
                    <td>@item.CateName</td>
                    <td>
                        <div class="btn btn-warning btn-fix" onclick="Edit(@item.ID)"><i class="bi bi-tools"></i> Sửa</div>
                        <div data-id="@item.ID" onclick="openConfirmationDialog(this)" class="btn btn-danger btn-delete"><i class="bi bi-trash"></i> Xóa</div>
                    </td>
                </tr>
                STT++;
            }
        }
    </tbody>
</table>

<div class="pagination-container">
    @Html.PagedListPager(Model, page => Url.Action("ManageShift", new { page = page, searchString = Request.QueryString["searchString"] }))
</div>

