
@{
    ViewBag.Title = "ManageAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var listUser = ViewBag.listUser;
    var listRole = ViewBag.listRole;
}

@model WebApp.Models.tb_User

<style>
    .btn-add {
        margin-right: 30px;
    }

    .modal-header {
        background-color: #2a86bb;
        color: white;
    }
</style>

<div class="modal modal-lg fade" id="myModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header ">
                <h1 class="modal-title w-100 text-center fs-5 text-uppercase" id="staticBackdropLabel">Thêm mới tài khoản</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            @using (Ajax.BeginForm("CreateAccount", "Home", new AjaxOptions()
            {
                HttpMethod = "POST",
                OnSuccess = "handleSuccess",
                OnFailure = "handleFailure",
            }))
            {

                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <label class="form-label" for="UserID">Mã tài khoản<span class="text-danger"> *</span></label>
                            <div class="col-sm-12">
                                @Html.TextBoxFor(m => m.UserID, new {@class = "form-control"})
                                @Html.ValidationMessageFor(m => m.UserID,"", new {@class = "text-danger"})
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <label class="form-label" for="UserName">Tên tài khoản<span class="text-danger"> *</span></label>
                            <div class="col-sm-12 col-lg-12">
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <label class="form-label" for="Password">Mật khẩu<span class="text-danger"> *</span></label>
                            <div class="col-sm-12 col-lg-12">
                                @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <label class="form-label" for="FullName">Họ và tên<span class="text-danger"> *</span></label>
                            <div class="col-sm-12 col-lg-12">
                                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <label class="form-label" for="Email">Email<span class="text-danger"> *</span></label>
                            <div class="col-sm-12 col-lg-12">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <label class="form-label" for="Phone">Số điện thoại<span class="text-danger"> *</span></label>
                            <div class="col-sm-12 col-lg-12">
                                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <label class="form-label" for="Address">Địa chỉ<span class="text-danger"> *</span></label>
                            <div class="col-sm-12 col-lg-12">
                                @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <label class="form-label" for="RoleName">Trạng thái<span class="text-danger"> *</span></label>
                            <div class="col-sm-12 col-lg-12">
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <label class="form-label" for="RoleName">Quyền<span class="text-danger"> *</span></label>
                            <div class="col-sm-12 col-lg-12">
                                @Html.DropDownListFor(m => m.RoleID, listRole as List<SelectListItem>, "--Chọn quyền--", new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })

                            </div>
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn-submit btn btn-primary">Thêm mới</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                </div>
            }
        </div>
    </div>
</div>

<div>
    <div class="d-flex flex-row-reverse">
        <button class="btn btn-primary btn-add" data-bs-toggle="modal" data-bs-target="#myModal">Thêm mới</button>
    </div>
    <div class="container">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">STT</th>
                    <th scope="col">Mã tài khoản</th>
                    <th scope="col">Tên tài khoản</th>
                    <th scope="col">Họ và tên</th>
                    <th scope="col">Email</th>
                    <th scope="col">SĐT</th>
                    <th scope="col">Địa chỉ</th>
                    <th scope="col">Quyền</th>
                    <th scope="col">Trạng thái</th>
                </tr>
            </thead>
            <tbody class="table-content">
                @{
                    var STT = 1;
                    foreach (var item in listUser)
                    {
                        <tr>
                            <td>@STT</td>
                            <td>@item.UserID</td>
                            <td>@item.UserName</td>
                            <td>@item.FullName</td>
                            <td>@item.Email</td>
                            <td>@item.Phone</td>
                            <td>@item.Address</td>
                            <td>@item.RoleName</td>
                            <td>@item.Status</td>
                            <td>
                                <div class="btn btn-warning"><i class="bi bi-tools"></i> Sửa</div>
                                <div class="btn btn-danger"><i class="bi bi-trash"></i> Xóa</div>
                            <td>
                        </tr>

                        STT++;
                    }

                }
            </tbody>

        </table>
    </div>

</div>

<script>

    function handleSuccess(data) {
        if (!data.success) {
            toastr.options = {
                "closeButton": true,
                "debug": false,
                "newestOnTop": true,
                "progressBar": true,
                "positionClass": "toast-top-right",
                "preventDuplicates": false,
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            }
            toastr["error"](data.message, "Thông báo");
        } else {
            toastr.options = {
                "closeButton": true,
                "debug": false,
                "newestOnTop": true,
                "progressBar": true,
                "positionClass": "toast-top-right",
                "preventDuplicates": false,
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            }
            toastr["success"](data.message, "Thông báo");
        }
    }

    function handleFailure() {
        toastr.options = {
            "closeButton": true,
            "debug": false,
            "newestOnTop": true,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
        toastr["error"]("Đã có lỗi xảy ra khi thêm mới!", "Thông báo")

    }

</script>
