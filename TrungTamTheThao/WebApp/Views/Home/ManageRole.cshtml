
@{
    ViewBag.Title = "ManageRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var listRole = ViewBag.listRole;
}

<style>
    .btn-add {
        margin-right: 30px;
    }
</style>

<div class="modal modal-lg fade" id="myModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    
</div>

<div>
    <div class="d-flex flex-row-reverse">   
        <button class="btn btn-primary btn-add" onclick="CreateRole()">Thêm mới</button>
    </div>
    <div class="container">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">STT</th>
                    <th scope="col">Mã quyền</th>
                    <th scope="col">Tên quyền</th>
                    <th scope="col">Thao tác</th>
                </tr>
            </thead>
            <tbody class="table-content">
                @{
                    var STT = 1;
                    foreach (var item in listRole)
                    {
                        <tr>
                            <td>@STT</td>
                            <td>@item.RoleID</td>
                            <td>@item.RoleName</td>
                            <td>
                                <div class="btn btn-warning"><i class="bi bi-tools"></i> Sửa</div>
                                <div class="btn btn-danger"><i class="bi bi-trash"></i> Xóa</div>
                            <td>
                        </tr>

                        STT++;
                    }

                }
            </tbody>

        </table>
    </div>

</div>

<script>
    function CreateRole() {
        $.ajax({
            url: '/Home/CreateRole',
            type: 'GET',
            success: function (rs) {
                $('#myModal').html(rs);
                $('#myModal').modal('show');
            },
            error: function () {

            }
        })
    }
</script>
