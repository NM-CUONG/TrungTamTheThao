<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <style>
        /* CSS để tùy chỉnh giao diện */
        body {
            padding-top: 50px;
        }

        .sidebar {
            position: fixed;
            top: 0;
            bottom: 0;
            left: -250px; /* Ẩn sidebar ban đầu */
            width: 250px;
            padding: 20px;
            background-color: #f8f9fa;
            transition: left 0.5s;
        }

        .content {
            margin-left: 0;
            transition: margin-left 0.5s;
        }

        .menu-toggle {
            cursor: pointer;
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <h2>Sidebar</h2>
        <ul class="nav flex-column">
            <li class="nav-item"><a class="nav-link" href="#">Menu 1</a></li>
            <li class="nav-item"><a class="nav-link" href="#">Menu 2</a></li>
            <li class="nav-item"><a class="nav-link" href="#">Menu 3</a></li>
        </ul>
    </div>

    <!-- Main content -->
    <div class="content">
        <h1>test</h1>
    </div>

    <!-- Menu toggle -->
    <div class="menu-toggle" style="position: fixed; top: 20px; left: 10px; font-size: 24px;">
        <span onclick="toggleSidebar()">&#9776;</span>
    </div>

    <script>
        function toggleSidebar() {
            var sidebar = document.getElementById('sidebar');
            var content = document.querySelector('.content');

            if (sidebar.style.left === "-250px") {
                sidebar.style.left = "0";
                content.style.marginLeft = "250px";
            } else {
                sidebar.style.left = "-250px";
                content.style.marginLeft = "0";
            }
        }
    </script>

</body>
</html>
